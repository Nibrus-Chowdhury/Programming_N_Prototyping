firstName = input("What is your first name?")
lastName = input("What is your last name?")
fullName = firstName + " " + lastName

print("It's nice to meet you " + fullName + ".")

favColor = input("What is your favorite color?")
favMovie = input("What is your favorite movie?")
futureCareer = input("What do you want to be in the future?")
currentGrade = input("What is your current grade?")

print("From the data I have gathered, I know that: ")
print("Your favorite color is " + favColor + ".")
print("Your favorite movie is " + favMovie + ".")
print("You want to be a " + futureCareer + "in the future.")
print("Your current grade is " + currentGrade + ".")
